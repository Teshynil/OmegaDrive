{% include "::api.html.twig" %}
<script>
    var requireJS = [];

</script>



<div class="animated fadeIn">

    <div class="card">
        <table class="table table-responsive table-hover table-align-middle table-inverse table-striped mb-0">
            <thead class="thead-inverse">
                <tr>
                    <th class="text-center"><i class="fa fa-lg fa-files-o"></i>
                    </th>
                    <th>Nombre</th>
                    <th class="text-center">Tamaño</th>
                    <th class="d-none d-md-table-cell">Ultimo acceso</th>
                    <th class="d-none d-md-table-cell">Ultima modificación</th>
                    <th class="text-center"><i class="icon-grid"></i></th>
                </tr>
            </thead>
            <tbody>
                {% for item in files %}
                    <tr>
                        <td class="text-center" ondblclick="alert('hola');">
                            <div>
                                <i class="fa fa-lg fa-file-word-o"></i>
                            </div>
                        </td>
                        <td ondblclick="alert('hola');">
                            <div>{{item.name}}</div>
                            <div class="small text-muted">
                                <span>Creado el: </span> {{dateHuman(item.creationDate,"d/m/Y H:i:s")}}
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="callout callout-success">
                                <strong class="h6">{{bytesConvert(item.size)}}</strong>
                            </div>
                        </td>
                        <td class="d-none d-md-table-cell">
                            <div><a href="#">Avram Tarasios</a></div>
                            <div class="small text-muted">
                                <span>Accedido el: </span> 04/06/2017 18:00hrs
                            </div>
                        </td>
                        <td class="d-none d-md-table-cell">
                            <div><a href="#">Enéas Kwadwo</a></div>
                            <div class="small text-muted">
                                <span>Modificado el: </span> 03/06/2017 12:45hrs
                            </div>
                        </td>
                        <td class="text-center">
                            <strong>
                                <div class="d-xs-inline-table d-none">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-dark"><i class="fa fa-star fa-adapt"></i></a>
                                        <a class="btn btn-dark"><i class="icon-trash"></i></a>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-dark"><i class="icon-share"></i></a>
                                        <a class="btn btn-dark"><i class="icon-calendar"></i></a>
                                    </div>
                                    <!--
                                    <a class="btn btn-dark"><i class="fa fa-star-o"></i></a>
                                    <a class="btn btn-dark"><i class="icon-action-undo"></i></a>
                                    -->
                                </div>
                                <div class="dropdown d-xs-none">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">&#9776;</button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Añadir a favoritos</a>
                                        <a class="dropdown-item" href="#">Borrar</a>
                                        <a class="dropdown-item" href="#">Compartir</a>
                                        <a class="dropdown-item" href="#">Versiones</a>
                                    </div>
                                </div>
                            </strong>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <!--/.card-->
</div>

