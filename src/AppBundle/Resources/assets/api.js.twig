
function Mark(e){
    var data=$(e).parent().attr('file');
    $.ajax({
            type: 'GET',
            url: "{{path('_mark')}}/"+data,
            async: true,
            success: function (r) {
                if(r.ok){
                    var i=$(e).find('i');
                    i.removeClass('fa-star');
                    i.removeClass('fa-star-o');
                    if(r.mark){
                        i.addClass('fa-star');
                    }else{
                        i.addClass('fa-star-o');
                    }
                }
            }
        });
}

